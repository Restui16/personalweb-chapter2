<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Project</title>
    <!-- <link rel="stylesheet" href="assets/css/app.css"> -->
    <!-- <link rel="stylesheet" href="assets/css/myProject.css"> -->
    <link rel="stylesheet" href="assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>

    <nav class="navbar sticky-top navbar-expand-lg bg-white shadow z-3">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="assets/img/logo.png" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/my-project">Add Project</a>
                    </li>
                    {{!-- <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonials</a>
                    </li> --}}
                </ul>

                <a href="/contact" class="btn btn-secondary rounded-pill">Contact Me</a>
            </div>
        </div>
    </nav>

    <main class="mt-5">
        <section id="addProject" class="container-fluid">
            <h1 class="text-center text-uppercase mb-3">Add Project</h1>
            <div class="col-lg-4 col-md-6 col-sm-8 x col-xs-12 mx-auto">
                <form action="" onsubmit="addProject(event)">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <label for="projectName">Project Name</label>
                                <input type="text" id="projectName" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-6 col-12 mb-3">
                            <div class="form-group">
                                <label for="startDate">Start Date</label>
                                <input type="date" id="startDate" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-6 col-12 mb-3">
                            <div class="form-group">
                                <label for="endDate">End Date</label>
                                <input type="date" id="endDate" class="form-control">
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea name="" id="description" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <label for="">Technologies</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="nodeJs">
                                        <label class="form-check-label" for="nodeJs">
                                            Node Js
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="laravel">
                                        <label class="form-check-label" for="laravel">
                                            Laravel
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="python">
                                        <label class="form-check-label" for="python">
                                            Python
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="reactJs">
                                        <label class="form-check-label" for="reactJs">
                                            React Js
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <label for="image">Upload File</label>
                                <input type="file" class="form-control" id="image">
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                </form>
            </div>
        </section>

        <section class="mt-5" id="myProject">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="text-center fw-bold my-5">MY PROJECT</h1>
                    <div class="container">
                        <div class="row">
                            {{#each data}}
                            <div class="col-md-6 col-lg-4 col-12 mb-3">
                                <div class="card">
                                    <img src="assets/img/img1.jpg" class="rounded-top" alt="">
                                    <div class="card-body">
                                        <h4 class="text-uppercase text-break">{{this.title}}</h4>
                                        <p class="text-muted">Duration : 4 Month</p>
                                        <p class="text-break">{{this.description}}<a href="/my-project-detail/{{this.title}}" target="_blank">Read More</a></p>
                                        <div class="icon-tech fs-2 mb-2" id="iconTech">
                                            <i class="{{this.nodejs}}"></i>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center gap-2">
                                            <a href="#" class="btn btn-secondary flex-grow-1">Edit</a>
                                            <a href="#" class="btn btn-secondary flex-grow-1">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="assets/js/myProject.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>