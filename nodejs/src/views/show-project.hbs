<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Detail</title>
    {{! <link rel="stylesheet" href="assets/css/app.css" /> }}
    {{! <link rel="stylesheet" href="assets/css/myProject.css" /> }}
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>

  <body>
    <nav class="navbar sticky-top navbar-expand-lg bg-white shadow z-3">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/assets/img/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page"  href="/my-project">Add Project</a>
            </li>
          </ul>

          <a href="/contact" class="btn btn-custom-dark rounded-pill">Contact Me</a>
        </div>
      </div>
    </nav>

    <main class="my-5">
      <div class="container">
        <div class="row">
          <h1 class="text-center text-uppercase fw-bold my-4">{{data.projectName}}</h1>
          <div class="col-12 col-lg-6 mb-5 d-flex">
            <img
              src="/assets/img/img2.jpg"
              class="w-100 h-100 object-fit-cover"
              alt=""
            />
          </div>
          <div class="col-12 col-lg-6 p-md-5">
            <div class="row">
              <h4 class="mb-3 fw-bold">Duration</h4>
              <span class="col-12 mb-3 fs-3">
                <i class="fa-solid fa-calendar-days me-3"></i>
                {{getStartDate}} - {{getEndDate}}
              </span>
              <span class="col-12 mb-3 fs-3">
                <i class="fa-regular fa-clock me-3"></i>
                {{data.duration}} Month
              </span>
              <h4 class="fw-bold">Technologies</h4>
              {{#if data.tech.node}}
              <span class="col-6 mb-3 fs-3">
                <i class="fa-brands fa-node me-3"></i>
                Node Js
              </span>
              {{/if}}
              {{#if data.tech.laravel}}
              <span class="col-6 mb-3 fs-3">
                <i class="fa-brands fa-laravel me-3"></i>
                Laravel
              </span>
              {{/if}}
              {{#if data.tech.python}}
              <span class="col-6 mb-3 fs-3">
                <i class="fa-brands fa-python me-3"></i>
                Python
              </span>
              {{/if}}
              {{#if data.tech.react}}
              <span class="col-6 mb-3 fs-3">
                <i class="fa-brands fa-react me-3"></i>
                React Js
              </span>
              {{/if}}
            </div>
          </div>
        </div>

        <div class="row">
          <p style="text-align: justify;">
            {{data.description}}
          </p>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/myProject.js"></script>
  </body>

</html>